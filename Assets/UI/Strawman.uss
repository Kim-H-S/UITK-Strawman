.actionButton {
    font-size: 20px;
    margin-top: 20px;
    margin-right: 20px;
    margin-bottom: 20px;
    margin-left: 20px;
    transition-property: scale;
    transition-duration: 0.2s;
}

.actionButton:hover {
    scale: 1.2 1.2;
    transition-property: scale;
    transition-duration: 0.2s;
}
